                border-radius: 50%;
            }

        .site-header.header-over {
            position: absolute;
            top: 0;
            left: 0;
            background: -moz-linear-gradient(top, rgba(36,50,74,0.65) 0%, rgba(0,0,0,0) 100%);
            background: -webkit-linear-gradient(top, rgba(36,50,74,0.65) 0%,rgba(0,0,0,0) 100%);
            background: linear-gradient(to bottom, rgba(36,50,74,0.65) 0%,rgba(0,0,0,0) 100%);
        }
</style>

@code {
    private bool navOpen = false;

    private bool headerOver = false;

    private async Task StartApp()
    {
        try
        {
            await jsRuntime.InvokeVoidAsync("startapp");
        }
        catch (Exception ex)
        {

            logger?.LogError(ex, "Something went wrong executing the startapp");
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            UpdateHeaderOver();
            await StartApp();
            navManager.LocationChanged += async (s, e) =>
            {
                UpdateHeaderOver();
                await StartApp();
            };
        }
    }

    private void UpdateHeaderOver()
    {
        var path = navManager.Uri.AsSpan().Slice(navManager.BaseUri.Length);
        if (path.Length == 0)
        {
            headerOver = true;
        }
        else
        {
            headerOver = false;
        }
        InvokeAsync(StateHasChanged);
    }
}